<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cwk2.appointments">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Appointments"
        android:supportsRtl="true"
        android:theme="@style/Appointments_theme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateAppointment"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ViewAppointments" />
        <activity android:name=".DeleteAppointment" />
        <activity android:name=".MoveAppointment" />
        <activity android:name=".Thesaurus" />
        <activity android:name=".Splash" />
        <activity android:name=".ViewAptDetails" />
        <activity
            android:name=".EditAppointment"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".SearchAppointments"></activity>
    </application>

</manifest>